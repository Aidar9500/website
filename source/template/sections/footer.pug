- var linkItems=['facebook-official','twitter', 'google-plus', 'linkedin' ]
- var linkUrls=['facebook.com','twitter.com', 'google.com','linkedin.com' ]
footer.footer
    .footer__top
        .container
            .footer__title Контакты
            .footer__links
                each item, key in linkItems
                    a.footer__social(href="https://" + linkUrls[key] target="_blank")
                        i(class='fa fa-'+item aria-hidden="true")
                            span.visually-hidden=linkItems
            .footer__text  iohoinoinoinionoinoinoin oinin oinoin noi noin
            form(action="#" method="post")
                    .footer__field: input.footer__input(type="email" placeholder="Ваш емайл")
                    button(type="submit").button Отправить
    .footer__bottom
        .footer__copy vpoewhvoiev oidcvosdiv vasdovndv sdoandvasodvn